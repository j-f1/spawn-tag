{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": ["es2015"],
    "declaration": true,
    "outDir": "./dist",

    "strict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,

    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "typeRoots": ["types/", "node_modules/@types"],
  "include": ["src/**/*"],
  "compileOnSave": true
}
